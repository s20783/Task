@model Task1.Models.TaskString

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Text" class="control-label">Text</label>
            <input asp-for="Text" class="form-control" placeholder="Write text" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-action="Reverse" type="submit" value="Reverse" class="btn btn-primary" />
        </div>
    </form>
    <a>@Html.DisplayFor(result => result.Text)</a>
</div>
